<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.CFRAT" version="1.0" android-versionCode="1001" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>CFRAT</name>
    
	<description>
        PhoneGap app for CFRAT.
    </description>
    
	<author email="info@54degreeesdesign.com" href="https://54degreesdesign.com/">
        54 Team
    </author>
    
	<content src="index.html" />
    <access origin="*" />

    <plugin name="cordova-plugin-whitelist" spec="~1.3.3" />
    <plugin name="cordova-plugin-inappbrowser" spec="~3.0.0" />
	
	<!-- Add Onesignal push -->
	<!-- <plugin name="onesignal-cordova-plugin" spec="^2.4.1" source="npm" /> -->

	<!-- Requires cli-8.0.0 but we recommend using the latest version. -->
	<preference name="phonegap-version" value="cli-8.0.0" />
	<preference name="android-build-tool" value="gradle" />
	<preference name="android-minSdkVersion" value="15" />

	<!-- CFRAT App Icon -->
	<icon src="www/icon.png" />


	<!-- iPhone 6 -->
	<splash src="www/icon.png" platform="ios" width="750" height="1334" />
	<splash src="www/icon.png" platform="ios" width="1242" height="2208" />
	<splash src="www/icon.png" platform="ios" width="2208" height="1242" />

	<!-- iPad -->
	<splash src="www/icon.png" platform="ios" width="768" height="1024" />
	<splash src="www/icon.png" platform="ios" width="1024" height="768" />

	<!-- Retina iPad -->
	<splash src="www/icon.png" platform="ios" width="1536" height="2048" />
	<splash src="www/icon.png" platform="ios" width="2048" height="1536" />
	
	<!-- Use android 8 plus-->
	<preference name="android-minSdkVersion" value="26" />
    
</widget>
